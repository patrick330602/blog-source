<%# profile %>

<% var profile = theme.profile %>

<h1><%= config.title %></h1>

<div>
	<%# about %>
	<h2 style="margin: 20px 0 20px;"><%= __('common.about') %> </h2>
	<%- include_md('_index/' + page_language() + '.md') %>

	<div>
		<input id="toggle-list-1" class="toggle" type="checkbox">
		<label for="toggle-list-1" class="fancy-toggle-1"><%= __('home.social') %></label>
		<div class="list">
			<p>
				<ul>
					<% for (var i in site.data.social) { %>
						<li><a href="<%= site.data.social[i] %>"><%= i %></a></li>
					<% } %>
				</ul>
			</p>
		</div>
	</div>
	<div>
		<input id="toggle-list-2" class="toggle" type="checkbox">
		<label for="toggle-list-2" class="fancy-toggle-2"><%= __('home.talks') %></label>
		<div class="list">
			<p>
				<ul>
					<% for (var t in site.data.talks) { %>
						<li><%- render(site.data.talks[t], 'ejs') %></li>
						<% } %>
				</ul>
			</p>
		</div>
	</div>
	<div>
		<input id="toggle-list-3" class="toggle" type="checkbox">
		<label for="toggle-list-3" class="fancy-toggle-3"><%= __('home.friends') %></label>
		<div class="list">
			<p>
				<ul>
					<% for (var friend in site.data.friends) { %>
					<li><a href="<%= site.data.friends[friend] %>"><%= friend %></a></li>
					<% } %>
				</ul>
			</p>
		</div>
	</div>
</div>

<div id="sec-post">
	<%# blog %>
	<h2 style="margin: 20px 0 20px;"><%= __('common.posts') %> | <a href="<%- url_for(lang_prepend('/tags')) %>"><%= __('common.tags') %> </a></h2>
	<% var local_post_count = 0 %>
	<% page.posts.each(function (post) { %>
	<% if( post.categories &&  post.categories.length == 0 && local_post_count < 10 ) {%>
	<p>

		<time><b><%= format_date_full(post.date) %></b></time>
		<a href="<%- url_for(post.path) %>"><%= post.title || __('untitled') %></a>
		<br />><span>
			<% if( post.tags &&  post.tags.length > 0 ) {%>
				<% post.tags.forEach(tag => {%>
				<a href="<%- url_for(tag.path) %>"><%= i18n_for_tag(tag.name) %></a> 
				<% })%>
			<% }%>
		</span>
	</p>
	<% local_post_count += 1 %>
	<% }}) %>

	<b>>> <a href="<%- url_for(lang_prepend('/archives')) %>"><%= __('common.more') %> </a></b>
</div>

