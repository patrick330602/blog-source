<div id="sec-post">
<%# blog %>
<h2 style="margin: 20px 0 20px;">Posts</h2>
<% var local_post_count = 0 %>
<% page.posts.each(function (post) { %>
<% if( post.categories &&  post.categories.length == 0 && local_post_count < 10 ) {%>
<p>

	<time><b><%= date(post.date,  "YYYY MMM Do") %></b></time> 
	<a  href="<%- url_for(post.path) %>"><%= post.title || __('Untitled')%></a>
	<br/>><span>
		<% if( post.tags &&  post.tags.length > 0 ) {%>
			<%- list_tags( post.tags ,{
					  show_count:false,
					  style:'none',
					  separator:" "
					  }) %>
			<% }%>
	</span>
</p>
<% local_post_count += 1 %>
<% }}) %>

<b>>> <a href="<%- url_for('/archives') %>">More this way!</a></b>
</div>

<div id="sec-friends">
<h2 style="margin: 20px 0 20px;">Friends</h2>
<ul>
	<% for (var friend in site.data.friends) { %>
		<li><a href="<%= site.data.friends[friend] %>"><%= friend %></a></li>
	<% } %>
</ul>
</div>

<div id="sec-tags">
<h2 style="margin: 20px 0 20px;">Tags</h2>
<% site.tags.sort('date',-1).each( function (tag){%>
<span class="hometag">
	<a style="text-decoration: none;" href="<%- url_for(tag.path) %>"><%- tag.name %> - <%- tag.length %></a>
</span>
<% })%>
</div>

