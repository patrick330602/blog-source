<% if (page.comments !== "false") { %>

<script src="https://giscus.app/client.js"
        data-repo="patrick330602/blog-source"
        data-repo-id="MDEwOlJlcG9zaXRvcnkzMzQxOTM5OTY="
        data-category="General"
        data-category-id="DIC_kwDOE-tlTM4CPaV9"
        data-mapping="pathname"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="top"
        data-theme="preferred_color_scheme"
<% if (page_language() == "zh") { %> 
        data-lang="zh-TW"
<% } else { %>
        data-lang="en"
<% } %>
        data-loading="lazy"
        crossorigin="anonymous"
        async>
</script>
<% } %>

<h2><%= __('post.nav') %> </h2>

<% if (page.prev || page.next){ %>
<nav>
  <% if (page.prev){ %>
  <div>
    <strong><%= __('post.next') %></strong>:
    <% var title = truncate(page.prev.title , {length:60}) %>
    <a class="post-nav-title" href="<%- url_for(page.prev.path) %>">
      <%= title ||  __('untitled') %>
    </a>
  </div>
  <% } %>
  <% if (page.next){ %>
  <div>
      <strong><%= __('post.prev') %></strong>:
      <% var title = truncate(page.next.title, {length:60}) %>
      <a class="post-nav-title" href="<%- url_for(page.next.path) %>">
        <%= title ||  __('untitled') %>
      </a>
  </div>
  <% } %>
</nav>
<% } %>